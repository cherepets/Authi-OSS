<ContentView
    x:Class="Authi.App.Maui.UI.CopyNotification"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l10n="clr-namespace:Authi.App.Logic.Localization;assembly=Authi.App.Logic"
    BindingContextChanged="OnBindingContextChanged">
    <Border
        Margin="0,0,0,28"
        Padding="16,8"
        Background="{DynamicResource Tertiary}"
        HorizontalOptions="Center"
        Opacity="0"
        StrokeThickness="0"
        TranslationY="180"
        VerticalOptions="End">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="8" />
        </Border.StrokeShape>
        <Label Text="{x:Static l10n:Generic.Copied}" TextColor="{DynamicResource OnTertiary}" />
    </Border>
</ContentView>
