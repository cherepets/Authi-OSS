<Application
    x:Class="Authi.App.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Authi.App.WinUI.Converters"
    xmlns:media="using:Microsoft.UI.Xaml.Media">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <converters:ConvertersDictionary />
                <ResourceDictionary>
                    <Style x:Key="TotpTextBlockStyle" TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="/Fonts/MajorMonoDisplay.ttf#Major Mono Display" />
                        <Setter Property="FontSize" Value="24" />
                    </Style>
                    <Style
                        x:Key="BodyLargeTextBlockStyle"
                        BasedOn="{StaticResource BodyTextBlockStyle}"
                        TargetType="TextBlock">
                        <Setter Property="FontSize" Value="20" />
                    </Style>
                    <Style
                        x:Key="IconButtonStyle"
                        BasedOn="{StaticResource DefaultButtonStyle}"
                        TargetType="Button">
                        <Setter Property="Padding" Value="0" />
                        <Setter Property="Width" Value="40" />
                        <Setter Property="Height" Value="40" />
                    </Style>
                    <Style
                        x:Key="TransparentIconButtonStyle"
                        BasedOn="{StaticResource IconButtonStyle}"
                        TargetType="Button">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                    </Style>
                    <media:AcrylicBrush
                        x:Key="TitleBarBackgroundBrush"
                        FallbackColor="{ThemeResource SolidBackgroundFillColorSecondary}"
                        TintColor="{ThemeResource SystemAccentColorDark3}"
                        TintLuminosityOpacity="0"
                        TintOpacity="0.1" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
