<UserControl
    x:Class="Authi.App.WinUI.Controls.SettingsSectionButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <FontIcon FontSize="18" Glyph="{x:Bind Icon}" />
        <TextBlock
            Grid.Column="1"
            Margin="16,0,16,1"
            VerticalAlignment="Center"
            Style="{ThemeResource BodyTextBlockStyle}"
            Text="{x:Bind Caption}" />
        <Button
            Grid.Column="2"
            MinWidth="140"
            Click="OnClicked"
            Content="{x:Bind Title}" />
    </Grid>
</UserControl>
